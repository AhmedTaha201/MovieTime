<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    tools:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/back_poster_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/aiw" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scrim_colored" />


        <TextView
            android:id="@+id/movieTitle_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_poster_card"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="Avengers Infinity War" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_poster_card"
            android:layout_alignRight="@id/back_poster_card"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="48dp"
            android:src="@drawable/ic_favourite" />

        <TextView
            android:id="@+id/movieRate_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_poster_card"
            android:layout_alignRight="@id/back_poster_card"
            android:layout_marginBottom="@dimen/margin_fav_item_entry"
            android:layout_marginRight="@dimen/margin_fav_item_entry"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="7.5" />

    </RelativeLayout>

</android.support.v7.widget.CardView>